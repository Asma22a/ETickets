@model Cinema
<div class=" col-md-7 col-lg-12 py-3 m-5">
    <h1> Edit Cinema </h1>
    <form method="post">
        <div class="col-sm-6">
            <label for="CinemaName" class="form-label">Cinema Name</label>
            <input type="text" class="form-control" id="CinemaName" name="Name" value="@Model.Name" required>
            <div class="invalid-feedback">
                Valid name is required.
            </div>
        </div>
        <div class="col-sm-6">
            <label for="Description" class="form-label"> Description</label>
            <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" required>
            <div class="invalid-feedback">
                Valid Description is required.
            </div>
        </div>
        <div class="col-sm-6">
            <label for="Address" class="form-label"> Address</label>
            <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" required>
            <div class="invalid-feedback">
                Valid Description is required.
            </div>
        </div>
        <br />
        <button class="btn btn-primary btn-lg px-lg-5 me-sm-3" type="submit">ADD</button>
    </form>
</div>


