<div class=" col-md-7 col-lg-12 py-3 m-5">
    <h1> Add New Cinema </h1>
    <form method="post" enctype="multipart/form-data">
        <div class="col-sm-6">
            <label for="CinemaName" class="form-label">Cinema Name</label>
            <input type="text" class="form-control" id="CinemaName" name="Name" required>
            <div class="invalid-feedback">
                Valid name is required.
            </div>
        </div>
        <div class="col-sm-6">
            <label for="Description" class="form-label">Description</label>
            <input type="text" class="form-control" id="Description" name="Description" />
        </div>
        <div class="col-sm-6">
            <label for="Address" class="form-label">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" required>
            <div class="invalid-feedback">
                Valid Address is required.
            </div>
        </div>

        <br />
        <button class="btn btn-primary btn-lg px-lg-5 me-sm-3" type="submit">ADD</button>
    </form>
</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById('imgPreview');

        if (input.files && input.files[0]) {
            const reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
